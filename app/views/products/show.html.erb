<div class="row col-md-12 top">
<h1 class="title"><%= @product.name %></h1>
</div>
<div class="row">
<div class="col-md-6">
<h4 class="second-title">Reviews for this product:</h4>
<% if @product.reviews.any? %>

<% @product.reviews.each do |review| %>

  <p>
    <%= link_to review.author, product_review_path(@product, review) %>
  </p>

<% end %>

<% else %>
<p>No reviews are listed for this product.</p>
<% end %>
<br>
<p class="btn btn-info"><%= link_to "Add a review", new_product_review_path(@product) %></p>
</div>

<div class="col-md-6">

<% if @product.cost != nil %>
<h3 class="second-title"><%= @product.name %> Costs:</h3>

<p>$<%= @product.cost %></p>

<% else %>
<h4>There are no costs listed for this product yet!</h4>

<% end %>
</div>

<div class="col-md-6">

<% if @product.country_of_origin != nil %>
<h3 class="second-title">This product comes from:</h3>

<p><em><%= @product.country_of_origin %></em></p>

<% else %>
<h4>There are no origins listed for this product yet!</h4>

<% end %>
</div>
</div>
<br>
<p><%= link_to "Edit", edit_product_path(@product) %> |
  <%= link_to "Delete product", product_path(@product),
  :data => {:confirm => "Are you sure?",
  :method => "delete"} %> |
  <%= link_to "Return to products", products_path %></p>
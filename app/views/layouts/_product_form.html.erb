<%= render "layouts/errors", :object => @product %>

<%= form_for @product do |f| %>
  <h4><%= f.label :name %></h4>
  <%= f.text_field :name %>
  <h4><%= f.label :cost %></h4>
  <%= f.number_field :cost %>
  <h4><%= f.label :country_of_origin %></h4>
  <%= f.text_area :country_of_origin %>
  <p><%= f.submit :Submit, class: 'btn btn-primary'  %></p>
<% end %>